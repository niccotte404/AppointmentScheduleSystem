@using AppointmentScheduleSystem.Data.Enum
@model IEnumerable<Schedule>

@{
    ViewData["Title"] = "Schedule";
    
}

<body>
    <div class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="header-text">
                        <h2>Schedule</h2>
                        <div class="div-dec"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="what-we-do">
        <div class="container">
            <div class="row">
                <div class="right-items">
                    @foreach (var meeting in Model)
                    {
                        var month = (Months)meeting.Date.Month;
                        <div class="item">
                            <h4>@meeting.Title - @meeting.Cabinet cab</h4>
                            <div class="col-md-6">
                                @if (@meeting.Description.Length > 75)
                                {
                                    for (int i = 0; i < 75; i++)
                                    {
                                        <text>@meeting.Description[i]</text>
                                    }
                                    <text>...</text>
                                }
                                else
                                {
                                    <text>@meeting.Description</text>
                                }
                            </div>
                            <text>@meeting.Date.Day @month @meeting.Date.Year</text><em>@meeting.Time</em> <!-- time -->
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <section class="white-section"></section>
</body>